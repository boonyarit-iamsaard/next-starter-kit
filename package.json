{
  "name": "next-solution",
  "author": {
    "email": "boonyarit.iamsaard@gmail.com",
    "name": "Boonyarit Iamsa-ard"
  },
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "check": "turbo run lint && turbo run format && turbo run typecheck",
    "db:generate": "turbo run db:migrate",
    "db:migrate": "turbo run db:migrate",
    "db:push": "turbo run db:push",
    "db:reset": "turbo run db:reset",
    "db:seed": "turbo run db:seed",
    "db:studio": "turbo run db:studio",
    "dev": "turbo run dev",
    "format": "turbo run format --continue",
    "format:fix": "turbo run format:fix --continue",
    "lint": "turbo run lint --continue",
    "lint:fix": "turbo run lint:fix --continue",
    "prepare": "husky || true",
    "preview": "next build && next start",
    "start": "next start",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.1",
    "prettier": "^3.5.3",
    "turbo": "^2.5.8"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.13.1",
  "lint-staged": {
    "*": [
      "prettier --check --ignore-unknown"
    ]
  }
}
