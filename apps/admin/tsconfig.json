{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@next-solution/typescript/next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [
    "**/*.cjs",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    "*.config.js",
    "*.config.ts",
    ".next/types/**/*.ts",
    "next-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
